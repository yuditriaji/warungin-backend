# Environment
PORT=8080

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=warungin

# Or use connection string
# DATABASE_URL=postgres://user:password@localhost:5432/warungin?sslmode=disable

# JWT
JWT_SECRET=your-super-secret-key-change-in-production

# App
APP_ENV=development
FRONTEND_URL=http://localhost:3000

# Doku Payment Gateway (QRIS)
DOKU_CLIENT_ID=your-doku-client-id
DOKU_SECRET_KEY=your-doku-secret-key
DOKU_BASE_URL=https://api-sandbox.doku.com
# RSA private key for Doku SNAP authentication (PEM format, newlines as \n)
# DOKU_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nMIIEvQ...\n-----END PRIVATE KEY-----
# Or specify a file path instead:
# DOKU_PRIVATE_KEY_PATH=./keys/doku_private.pem

# Email (Resend)
# RESEND_API_KEY=re_xxxx
# EMAIL_FROM_ADDRESS=Warungin <noreply@warungin.com>
